{
    "name": "valterjrdev/hangman-game",
    "type": "project",
    "authors": [
        {
            "name": "Valter Junior",
            "email": "valterjrdev@gmail.com"
        }
    ],
    "require": {
        "symfony/console": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4":  {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2",
        "phpstan/phpstan": "^0.12.78"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-text",
        "static": "vendor/bin/phpstan analyse -c phpstan.neon"
    }
}
